{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "api/src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "assets/**/*",
        "watchAssets": true,
        "outDir": "../dist/api/src"
      },
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": "../dist/api/src"
      }
    ]
  }
}
